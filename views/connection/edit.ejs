<%- include('../partials/header.ejs')%>
  <div class="create-form">
    <form method="POST" action="/connections/<%= connection.id%>?_method=PUT">
      <label>Title <input type="text" placeholder="title" id="title" name="title" value="<%= connection.title%>"
          required /></label><br />
      <label>Topic <input type="text" placeholder="topic" id="topic" name="topic" value="<%= connection.topic%>"
          required /></label><br />
      <label>Details <input type="text" placeholder="description" id="details" name="details"
          value="<%=connection.details%>" required minlength="10" /></label><br />
      <label>Date <input type="date" id="date" name="date" value="<%= connection.date%>" required /></label><br />
      <label>Where <input type="text" placeholder="location" id="location" name="location"
          value="<%= connection.location%>" required /></label><br />
      <label>Start Time <input type="time" id="startTime" name="startTime" value="<%= connection.startTime%>"
          required /></label><br />
      <label>End Time <input type="time" id="endTime" name="endTime" value="<%= connection.endTime%>"
          required /></label><br />
      <label>Image URL <input type="url" placeholder="image URL" id="imageURL" name="imageURL"
          value="<%= connection.imageURL%>" required></label><br />
      <button>Submit</button>
    </form>
  </div>
  <%- include('../partials/footer.ejs')%>